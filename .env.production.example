# Production Environment Configuration for Ulu-Cafe
# Copy this file to .env and configure for your production server

APP_NAME="Ulu Cafe"
APP_ENV=production
APP_KEY=
APP_DEBUG=false
APP_URL=https://your-domain.com
ASSET_URL=https://your-domain.com

# Trust proxies (Nginx/Docker)
TRUSTED_PROXIES=*

APP_LOCALE=id
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=id_ID

APP_MAINTENANCE_DRIVER=file

BCRYPT_ROUNDS=12

LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=error

# Database Configuration
# SQLite (default)
DB_CONNECTION=sqlite

# MySQL (uncomment to use)
# DB_CONNECTION=mysql
# DB_HOST=mysql
# DB_PORT=3306
# DB_DATABASE=ulucafe
# DB_USERNAME=ulucafe
# DB_PASSWORD=your_secure_password

# PostgreSQL (uncomment to use)
# DB_CONNECTION=pgsql
# DB_HOST=postgres
# DB_PORT=5432
# DB_DATABASE=ulucafe
# DB_USERNAME=ulucafe
# DB_PASSWORD=your_secure_password

SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=true
SESSION_PATH=/
SESSION_DOMAIN=null

BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local
QUEUE_CONNECTION=database

CACHE_STORE=database

# Redis (uncomment to use)
# REDIS_CLIENT=phpredis
# REDIS_HOST=redis
# REDIS_PASSWORD=null
# REDIS_PORT=6379

# Mail Configuration
MAIL_MAILER=smtp
MAIL_HOST=smtp.example.com
MAIL_PORT=587
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS="noreply@your-domain.com"
MAIL_FROM_NAME="${APP_NAME}"

# Midtrans Configuration
MIDTRANS_SERVER_KEY=
MIDTRANS_CLIENT_KEY=
MIDTRANS_IS_PRODUCTION=true

VITE_APP_NAME="${APP_NAME}"

# Docker/FrankenPHP Configuration
AUTO_MIGRATE=true
QUEUE_WORKER=true

# Traefik Configuration
DOMAIN_NAME=your-domain.com
ACME_EMAIL=your-email@example.com
# Optional: Traefik dashboard auth (generate with: htpasswd -nb admin password)
# TRAEFIK_DASHBOARD_AUTH=admin:$$apr1$$xyz...
